{
	"name": "My First Extension",
	"manifest_version": 2,
	"version": "1.0",
	"description": "The first extension that I made.",
	"default_locale":"en",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
	    "default_title": "Check this page!"
	},
	"background": {
		"scripts": [
			"js/backend.js","js/tamper.js"
		]
	},
	"options_page": "options.html",
	"permissions": [
		"<all_urls>",
        "webRequestBlocking",
        "webRequest",
        "tabs"
   	]
}